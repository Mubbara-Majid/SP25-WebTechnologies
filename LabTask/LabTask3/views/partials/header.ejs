<% var page = typeof page !== 'undefined' ? page : 'index'; %>

<link rel="stylesheet" href="/css/header.css">
<link rel="stylesheet" href="/css/footer.css">

<% if (page === 'index') { %>
  <link rel="stylesheet" href="/css/index.css">
<% } else if (page === 'login') { %>
  <link rel="stylesheet" href="/css/login.css">
<% } else if (page === 'checkout') { %>
  <link rel="stylesheet" href="/css/checkout.css">
<% } %>
<% if (page === 'register') { %>
  <link rel="stylesheet" href="/css/register.css">
<% } %>

<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<header id="header">
  <nav>
    <ul class="navbar">
      <li><a href="/">New Arrivals</a></li>
      <li class="dropdown">
        <a href="#">Clothing</a>
        <ul class="dropdown-menu">
          <li><a href="#">T-Shirts</a></li>
          <li><a href="#">Jeans</a></li>
          <li><a href="#">Jackets</a></li>
        </ul>
      </li>
      <li class="dropdown">
        <a href="#">Accessories</a>
        <ul class="dropdown-menu">
          <li><a href="#">Bags</a></li>
          <li><a href="#">Hats</a></li>
          <li><a href="#">Sunglasses</a></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#">Products</a>
        <ul class="dropdown-menu">
          <li><a href="/products">All</a></li>
          <li><a href="/products/run">Run</a></li>
          <li><a href="/products/yoga">Yoga</a></li>
          <li><a href="/products/casual">Casual</a></li>
        </ul>
      </li>

      <li><a href="#">Sale</a></li>
      <li><a href="#">Last Chance to Buy</a></li>
    </ul>
  </nav>

  <div class="logo">SweatyBetty</div>

  <ul class="icons">
    <% if (typeof session !== 'undefined' && session.user) { %>
      <li><span style="font-weight: bold;">Welcome, <%= session.user.name %></span></li>
      <li><a href="/logout" title="Logout"><i class="fas fa-sign-out-alt"></i></a></li>
    <% } else { %>
      <li><a href="/login"><i class="fas fa-user"></i></a></li>
    <% } %>
    <% if (session && session.user) { %>
      <li><a href="/my-orders">My Orders</a></li>
    <% } %>

    <li><a href="/cart" aria-label="Cart"><i class="fas fa-shopping-cart"></i></a></li>
    <li><a href="#" aria-label="Contact"><i class="fas fa-phone"></i></a></li>
  </ul>
</header>
