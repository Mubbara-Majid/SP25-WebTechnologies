<h2 style="text-align: center;">✏️ Edit Product</h2>

<form action="/admin/products/edit/<%= product._id %>" method="POST" style="max-width: 500px; margin: auto;">
  <div>
    <label>Product Name:</label><br>
    <input type="text" name="name" value="<%= product.name %>" required>
  </div>

  <div>
    <label>Price:</label><br>
    <input type="number" name="price" value="<%= product.price %>" required>
  </div>

  <div>
    <label>Category:</label><br>
    <input type="text" name="category" value="<%= product.category %>">
  </div>

  <div>
    <label>Image URL:</label><br>
    <input type="text" name="image" value="<%= product.image %>" required>
  </div>

  <div>
    <label>Description:</label><br>
    <textarea name="description" rows="4"><%= product.description %></textarea>
  </div>

  <div style="margin-top: 20px;">
    <button type="submit">✅ Update Product</button>
    <a href="/admin/products" style="margin-left: 10px;">🔙 Cancel</a>
  </div>
</form>
